# Configure the Libvirt provider
provider "libvirt" {
  uri = "{{uri | default('qemu:///system') }}"
  #uri = "qemu+tcp://192.168.122.1/system"
}

terraform {
  required_providers {
    template = {
      source = "hashicorp/template"
      version = "2.2.0"
    }

    libvirt = {
      source = "dmacvicar/libvirt"
      version = "0.7.0"
    }
  }
}
