# Generated by ansible
[all:vars]
cluster_name={{ cluster_name }}
worker_nodes={{ worker_nodes }}
master_nodes={{ master_nodes }}
ocp_version={{ ocp_version }}

uri={{ uri |default('qemu://system') }}
network_domain={{ network_domain | default('example.com') }}
network_cidr="{{ network_cidr | default('192.168.222.0/24') }}"
libvirt_storage_pool_name="{{ libvirt_storage_pool_name | default('ocp4') }}"
libvirt_storage_pool_path="{{ libvirt_storage_pool_path | default('/var/lib/libvirt/images/ocp4') }}"


ssh_public_key='{{ ssh_public_key_content }}'
pull_secret={{ pull_secret_json_content }}

quay_id="{{quay_id | default('init') }}"
quay_pw={{quay_pw | default('Redhat_0123456')}}
quay_root_ca={{quay_root_ca|default("/etc/quay-install/quay-rootCA/rootCA.pem")}}
quay_ocp_release={{quay_ocp_release| default('4.11.7')}}
quay_architecture={{quay_architecture|default('x86_64')}}
quay_local_registry={{quay_local_registry|default('local-quay.example.com:8443')}}
quay_local_repository={{quay_local_repository|default('ocp4/openshift4')}}
quay_product_repo={{quay_product_repo|default('openshift-release-dev')}}
quay_release_name={{quay_release_name|default('ocp-release')}}

dummy_network_ip={{dummy_network_ip|default('192.168.1.100')}}
dummy_network_interface={{dummy_network_interface|default('eth0')}}
dummy_network_hw={{dummy_network_hw|default('C8:D7:4A:4E:47:50')}}

lb_os_type={{ lb_os_type | default('centos') }} #rhel
lb_vm_volume_source={{ lb_vm_volume_source | default('https://cloud.centos.org/centos/8/x86_64/images/CentOS-8-GenericCloud-8.4.2105-20210603.0.x86_64.qcow2') }}
lb_memory={{ lb_memory | default('512') }}
lb_vcpu={{ lb_vcpu | default('1') }}
lb_disk={{ lb_disk | default('80') }}   #G

bootstrap_vm_size="{{ bootstrap_vm_size | default('50') }}"
bootstrap_vm_memory="{{ bootstrap_vm_memory | default('4096') }}"
bootstrap_vm_vcpu="{{ bootstrap_vm_vcpu | default('1') }}"

master_vm_size="{{ master_vm_size | default('80') }}"
master_vm_memory="{{ master_vm_memory | default('10240') }}"
master_vm_vcpu="{{ master_vm_vcpu | default('4') }}"

worker_vm_size="{{ worker_vm_size | default('80') }}"
worker_vm_memory="{{ worker_vm_memory | default('10240') }}"
worker_vm_vcpu="{{ worker_vm_vcpu | default('4') }}"


webserver_url={{ webserver_url | default('http://192.168.222.1:9000') }}
webserver_doc_path={{ webserver_doc_path | default('/var/www/html') }}

matchbox_rpc_endpoint={{ matchbox_rpc_endpoint | default('matchbox.example.com:8081') }}
matchbox_http_endpoint={{ matchbox_http_endpoint | default('http://matchbox.example.com:8080') }}
matchbox_client_cert={{ matchbox_client_cert | default('~/.matchbox/client.crt') }}
matchbox_client_key={{ matchbox_client_key | default('~/.matchbox/client.key') }}
matchbox_trusted_ca_cert={{ matchbox_trusted_ca_cert | default('~/.matchbox/ca.crt') }}

rhcos_kernel_src={{ rhcos_kernel_src | default('https://mirror.openshift.com/pub/openshift-v4/dependencies/rhcos/4.1/4.1.0/rhcos-4.1.0-x86_64-installer-kernel') }}
rhcos_initramfs_src={{ rhcos_initramfs_src | default('https://mirror.openshift.com/pub/openshift-v4/dependencies/rhcos/4.1/4.1.0/rhcos-4.1.0-x86_64-installer-initramfs.img') }}
rhcos_rootfs_src={{ rhcos_rootfs_src | default('https://mirror.openshift.com/pub/openshift-v4/dependencies/rhcos/4.1/4.1.0/rhcos-4.1.0-x86_64-metal-bios.raw.gz') }}

# openshift installer
openshift_installer_src={{ openshift_installer_src | default('https://mirror.openshift.com/pub/openshift-v4/clients/ocp/4.1.3/openshift-install-linux-4.1.3.tar.gz') }}

mirror_registry_src={{ mirror_registry_src |default('https://developers.redhat.com/content-gateway/rest/mirror/pub/openshift-v4/clients/mirror-registry/latest/mirror-registry.tar.gz')}}

rhcos_kernel_path={{ rhcos_kernel_path | default('/var/lib/match/assets/rhcos/4.1/rhcos-kernel') }}
rhcos_initramfs_path={{ rhcos_initramfs_path | default('/var/lib/match/assets/rhcos/4.1/rhcos-initramfs.img') }}
rhcos_rootfs_path={{rhcos_rootfs_path | default('http://192.168.222.1:9000/rhcos-rootfs.img') }}
pull_secret_path={{pull_secret_path | default('/home/jooho/Downloads/pull-secret.txt')}}
rhcos_install_dev={{ rhcos_install_dev | default('/dev/vda') }}


[hypervisor]
127.0.0.1 ansible_connection=local


